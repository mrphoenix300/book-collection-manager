<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #4361ee;
      --secondary-color: #3f37c9;
      --accent-color: #4895ef;
      --light-color: #f8f9fa;
      --dark-color: #212529;
      --success-color: #4cc9f0;
      --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      --form-radius: 16px;
    }
    
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e7f1 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 2rem 1rem;
    }
    
    .header-container {
      max-width: 800px;
      margin: 0 auto 2rem;
      text-align: center;
    }
    
    .form-container {
      max-width: 800px;
      margin: 0 auto;
      background: white;
      border-radius: var(--form-radius);
      overflow: hidden;
      box-shadow: var(--card-shadow);
    }
    
    .form-header {
      background: linear-gradient(120deg, var(--primary-color), var(--accent-color));
      color: white;
      padding: 2.5rem 2rem;
      text-align: center;
      position: relative;
    }
    
    .form-header h2 {
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    .form-header p {
      opacity: 0.9;
      margin-bottom: 0;
      font-size: 1.1rem;
    }
    
    .form-header::after {
      content: '';
      position: absolute;
      bottom: -20px;
      left: 50%;
      transform: translateX(-50%);
      width: 40px;
      height: 40px;
      background: white;
      border-radius: 50%;
      z-index: 2;
    }
    
    .form-header::before {
      content: '';
      position: absolute;
      bottom: -30px;
      left: 0;
      right: 0;
      height: 30px;
      background: white;
      border-radius: var(--form-radius) var(--form-radius) 0 0;
    }
    
    .form-body {
      padding: 3rem 2rem 2rem;
      position: relative;
    }
    
    .form-section {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 1px solid #edf2f7;
    }
    
    .form-section:last-child {
      border-bottom: none;
      margin-bottom: 1rem;
      padding-bottom: 0;
    }
    
    .form-section-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--secondary-color);
      margin-bottom: 1.5rem;
      position: relative;
      display: flex;
      align-items: center;
    }
    
    .form-section-title i {
      margin-right: 10px;
      background: rgba(67, 97, 238, 0.1);
      width: 36px;
      height: 36px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 10px;
      color: var(--primary-color);
    }
    
    .input-group-icon {
      position: relative;
      margin-bottom: 1.5rem;
    }
    
    .input-group-icon i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #a0aec0;
      z-index: 10;
    }
    
    .input-group-icon input,
    .input-group-icon select,
    .input-group-icon textarea {
      padding-left: 45px !important;
    }
    
    .input-group-icon textarea {
      padding-top: 12px !important;
    }
    
    .form-label {
      font-weight: 500;
      color: #4a5568;
      margin-bottom: 0.5rem;
      display: block;
    }
    
    .optional-badge {
      font-size: 0.75rem;
      font-weight: 500;
      background: #e2e8f0;
      color: #4a5568;
      padding: 2px 8px;
      border-radius: 12px;
      margin-left: 8px;
    }
    
    .required-badge {
      font-size: 0.75rem;
      font-weight: 500;
      background: rgba(231, 57, 70, 0.1);
      color: #e63946;
      padding: 2px 8px;
      border-radius: 12px;
      margin-left: 8px;
    }
    
    .form-control, .form-select {
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      padding: 12px 16px;
      transition: all 0.3s;
      font-size: 1rem;
    }
    
    .form-control:focus, .form-select:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.2);
    }
    
    .btn-primary {
      background: var(--primary-color);
      border: none;
      border-radius: 12px;
      padding: 12px 24px;
      font-weight: 600;
      transition: all 0.3s;
      font-size: 1rem;
    }
    
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(67, 97, 238, 0.3);
      background: var(--secondary-color);
    }
    
    .btn-outline-secondary {
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      padding: 12px 24px;
      font-weight: 600;
      transition: all 0.3s;
      color: #4a5568;
      font-size: 1rem;
    }
    
    .btn-outline-secondary:hover {
      background: #f8f9fa;
      border-color: #cbd5e0;
    }
    
    .rating-preview {
      display: flex;
      gap: 5px;
      margin-top: 10px;
    }
    
    .rating-preview span {
      font-size: 1.8rem;
      color: #e2e8f0;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .rating-preview span.active {
      color: #ffd43b;
    }
    
    .rating-preview span:hover {
      transform: scale(1.2);
    }
    
    .form-footer {
      display: flex;
      gap: 12px;
      margin-top: 2rem;
      flex-wrap: wrap;
    }
    
    .form-note {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 20px;
      margin-top: 1.5rem;
      border-left: 4px solid var(--primary-color);
    }
    
    .form-note p {
      margin-bottom: 0;
      color: #4a5568;
      display: flex;
      align-items: flex-start;
    }
    
    .form-note i {
      margin-right: 10px;
      color: var(--primary-color);
      margin-top: 4px;
    }
    
    @media (max-width: 768px) {
      .form-header {
        padding: 1.8rem 1.5rem;
      }
      
      .form-body {
        padding: 2.5rem 1.5rem 1.5rem;
      }
      
      .form-footer {
        flex-direction: column;
      }
      
      .form-footer .btn {
        width: 100%;
      }
      
      .form-section-title {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="header-container">
    <h1 class="fw-bold" style="color: var(--secondary-color);">Book Collection</h1>
    <p class="text-muted">Your personal reading library</p>
  </div>

  <div class="form-container">
    <div class="form-header">
      <h2><i class="fas fa-plus-circle me-2"></i>Add New Book</h2>
      <p>Enter the details of the book you'd like to add to your collection</p>
    </div>
    
    <div class="form-body">
      <form id="bookForm" action="/add-book" method="POST" class="needs-validation" novalidate>
        <div class="form-section">
          <div class="form-section-title">
            <i class="fas fa-book"></i>
            <span>Book Information</span>
          </div>
          
          <div class="input-group-icon">
            <label for="input" class="form-label">ISBN <span class="required-badge">Required</span></label>
            <i class="fas fa-barcode"></i>
            <input type="text" class="form-control" id="input" name="isbn" placeholder="Enter ISBN or book title" required>
            <div class="invalid-feedback">
              Please enter a valid ISBN number
            </div>
            <div class="form-text mt-2">Enter 10 or 13-digit ISBN number for accurate results</div>
          </div>
        </div>
        
        <div class="form-section">
          <div class="form-section-title">
            <i class="fas fa-star"></i>
            <span>Rating & Status</span>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="input-group-icon">
                <label for="rating" class="form-label">Rating <span class="optional-badge">Optional</span></label>
                <i class="fas fa-star"></i>
                <input type="number" min="1" max="5" class="form-control" id="rating" name="rating" placeholder="1-5">
              </div>
              <div class="rating-preview">
                <span data-value="1">★</span>
                <span data-value="2">★</span>
                <span data-value="3">★</span>
                <span data-value="4">★</span>
                <span data-value="5">★</span>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="input-group-icon">
                <label for="status" class="form-label">Status <span class="optional-badge">Optional</span></label>
                <i class="fas fa-bookmark"></i>
                <select class="form-select" id="status" name="status">
                  <option value="">Select Status</option>
                  <option value="reading">Currently Reading</option>
                  <option value="completed">Completed</option>
                  <option value="planned">Plan to Read</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        
        <div class="form-section">
          <div class="form-section-title">
            <i class="fas fa-book-open"></i>
            <span>Reading Progress</span>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="input-group-icon">
                <label for="currentPage" class="form-label">Current Page <span class="optional-badge">Optional</span></label>
                <i class="fas fa-book-reader"></i>
                <input type="number" class="form-control" id="currentPage" name="currentPage" placeholder="e.g. 50">
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="input-group-icon">
                <label for="readon" class="form-label">Read On <span class="optional-badge">Optional</span></label>
                <i class="fas fa-calendar-day"></i>
                <input type="text" class="form-control" id="readon" name="dateread" placeholder="YYYY-MM-DD">
              </div>
            </div>
          </div>
        </div>
        
        <div class="form-section">
          <div class="form-section-title">
            <i class="fas fa-edit"></i>
            <span>Your Thoughts</span>
          </div>
          
          <div class="input-group-icon">
            <label for="review" class="form-label">Review <span class="optional-badge">Optional</span></label>
            <i class="fas fa-comment"></i>
            <textarea class="form-control" rows="4" id="review" name="review" placeholder="Share your thoughts about the book..."></textarea>
          </div>
          
          <div class="input-group-icon">
            <label for="notes" class="form-label">Personal Notes <span class="optional-badge">Optional</span></label>
            <i class="fas fa-sticky-note"></i>
            <textarea class="form-control" rows="4" id="notes" name="notes" placeholder="Add your personal notes or quotes..."></textarea>
          </div>
        </div>
        
        <div class="form-note">
          <p><i class="fas fa-info-circle"></i> Only ISBN is required to add a new book. Other fields can be added later when editing.</p>
        </div>
        
        <div class="form-footer">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Add Book
          </button>
          <a href="/" class="btn btn-outline-secondary">
            <i class="fas fa-times me-2"></i>Cancel
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Form validation
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('bookForm');
      
      form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        
        form.classList.add('was-validated');
      }, false);
      
      // Star rating interaction
      const stars = document.querySelectorAll('.rating-preview span');
      const ratingInput = document.getElementById('rating');
      
      stars.forEach(star => {
        star.addEventListener('click', function() {
          const value = this.getAttribute('data-value');
          ratingInput.value = value;
          
          // Update star display
          stars.forEach((s, index) => {
            if (index < value) {
              s.classList.add('active');
            } else {
              s.classList.remove('active');
            }
          });
        });
        
        star.addEventListener('mouseover', function() {
          const value = this.getAttribute('data-value');
          
          stars.forEach((s, index) => {
            s.style.color = index < value ? '#ffec99' : '#e2e8f0';
          });
        });
        
        star.addEventListener('mouseout', function() {
          const currentValue = ratingInput.value || 0;
          
          stars.forEach((s, index) => {
            s.style.color = index < currentValue ? '#ffd43b' : '#e2e8f0';
          });
        });
      });
      
      // Set initial rating if exists
      if (ratingInput.value) {
        stars.forEach((star, index) => {
          if (index < ratingInput.value) {
            star.classList.add('active');
          }
        });
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>
</html>